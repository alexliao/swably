<p id="notice"><%= notice %></p>

<style>
    .odd {background-color: #eee;}
    td,th {padding: 4px 8px 4px 8px;}
</style>
<h1><%=@report.name%> <%="#{@report.param_name} #{params[:param] || @report.param_default}"%></h1>

<%if @records%>
    <table cellspacing=0>
      <tr>
      <%@records.fields.each do |f| %>
        <th><%= f %></th>
      <%end %>
      </tr>
    <%odd = false%>  
    <%@records.each do |r| %>
      <%odd = !odd%>
      <tr>
      <%i = 0%>
      <%r.each do |c| %>
        <td <%=odd ? "class='odd'" : nil %>><%=raw lookup(c, r, i, @records.fields, @lookups)%></td>
        <%i+=1%>
      <%end %>
      </tr>
    <% end %>
    </table>
<%end%>

<br />

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
