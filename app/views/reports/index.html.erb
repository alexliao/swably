<h1>Listing reports</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Category</th>
    <th>Name</th>
    <th>Param</th>
    <th>default</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.id %></td>
    <td><%= report.category %></td>
    <td><%= link_to report.name, report %></td>
    <td><%= report.param_name %></td>
    <td><%= report.param_default %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

