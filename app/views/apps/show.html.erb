<style type="text/css">
    img {vertical-align: top;}
    .round_avatar{
        width: 96px;
    }
    .round_avatar_bg{
        width: 96px;
        height: 96px;
        padding: 10px;
    }

</style>
<div style="width: 100%; position: absolute;">
    <a href="/" >
        <div style="width: 100%; position: absolute;" align="right">
            <div style="padding: 20px;" >
                <span style="color: #fff; font-size: 36px; line-height: 100%;"><%=t :lets_swap_apps%></span>
                <img src="/images/small_logo.png" height="60px" style="vertical-align: top; margin-left: 30px;" />
            </div>
        </div>
    </a>
    <div style="position: relative; width: 720px; margin: 0 auto; padding-top: 45px; color: #b7b7b7;">
        <%if @app%>
            <%app = @app%>
            <%app_name = app.local_name(params[:lr]||session[:code])%>
            <%@page_title=app_name%>
            <%@page_author=""%>
            <%@page_description=""%>
            <%@page_image=app.icon4share%>
           <div class="round_avatar_bg" style="position: relative; margin: 0 auto; z-index: 20;"><img src="<%=app.display_icon.thumbnail%>" class="round_avatar"/></div>
            <div class="rc10" style="background: #000; position: relative; top: -60px; ">
                <div style="text-align: center; padding-top: 80px;">
                    <div style="font-size: 36px;"><b><%=app_name%></b></div>
                    <br/>
                </div>
                <div style="padding:30px; border-bottom: solid 1px #939393;">
                            <span style="font-size:36px; line-height: 120%;"><b><%=app.description%></b></span><br/>
                </div>        
                <%=render(:partial =>  'shared/download_app', :locals => {:app => app}) %>
            </div>
        <%else%>
            <%=_('No record or deleted')%>
        <%end%>
    </div>
</div>
<div style="height: 100%; min-width: 1085px; min-height: 768px; overflow: hidden; ">
    <img width="100%" src="/images/back.jpg" />
</div>